.hero {
    height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding-top: 100px;
    background: radial-gradient(circle at 20% 30%, #0f2c57 0%, #071326 60%);
}

/* GOLD GLOW EFFECT */
.hero::before {
    content: "";
    position: absolute;
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(212,175,55,0.25) 0%, transparent 70%);
    top: -200px;
    right: -200px;
    z-index: 0;
}

/* WORLD GRID LIGHT */
.hero::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(rgba(255,255,255,0.05) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.2;
    z-index: 0;
}
